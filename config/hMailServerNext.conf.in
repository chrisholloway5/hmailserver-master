# hMailServer Next-Generation Configuration File
# Version: @PROJECT_VERSION@

[General]
# Server identification
server_name = "hMailServer Next @PROJECT_VERSION@"
server_description = "Next-Generation Email Server with AI Integration"

# Logging configuration
log_level = "info"
log_file = "/var/log/hmailserver/hmailserver.log"
log_max_size = "100MB"
log_rotation_count = 10

# Network configuration
bind_address = "0.0.0.0"
smtp_port = 25
smtp_ssl_port = 465
smtp_starttls_port = 587
imap_port = 143
imap_ssl_port = 993
pop3_port = 110
pop3_ssl_port = 995

# Database configuration
database_type = "mysql"
database_host = "localhost"
database_port = 3306
database_name = "hmailserver"
database_user = "hmailserver"
database_password = ""
database_pool_size = 20

# SSL/TLS configuration
ssl_certificate_path = "/etc/hmailserver/ssl/server.crt"
ssl_private_key_path = "/etc/hmailserver/ssl/server.key"
ssl_ca_bundle_path = "/etc/hmailserver/ssl/ca-bundle.crt"
ssl_protocols = "TLSv1.2,TLSv1.3"
ssl_ciphers = "ECDHE+AESGCM:ECDHE+CHACHA20:DHE+AESGCM:DHE+CHACHA20:!aNULL:!MD5:!DSS"

[AI]
# AI and MCP integration settings
@ENABLE_AI_FEATURES_COMMENT@enable_ai = @ENABLE_AI_FEATURES@
@ENABLE_AI_FEATURES_COMMENT@mcp_config_path = "/etc/hmailserver/mcp/config.json"
@ENABLE_AI_FEATURES_COMMENT@ai_model_cache_size = "1GB"
@ENABLE_AI_FEATURES_COMMENT@ai_processing_timeout = 30
@ENABLE_AI_FEATURES_COMMENT@ai_max_concurrent_requests = 10

# Model providers
@ENABLE_AI_FEATURES_COMMENT@openai_api_key = ""
@ENABLE_AI_FEATURES_COMMENT@openai_model = "gpt-4"
@ENABLE_AI_FEATURES_COMMENT@anthropic_api_key = ""
@ENABLE_AI_FEATURES_COMMENT@anthropic_model = "claude-3-opus"

# Local AI models
@ENABLE_AI_FEATURES_COMMENT@local_model_path = "/var/lib/hmailserver/models"
@ENABLE_AI_FEATURES_COMMENT@enable_local_inference = true
@ENABLE_AI_FEATURES_COMMENT@local_model_threads = 4

# AI Features
@ENABLE_AI_FEATURES_COMMENT@enable_spam_detection = true
@ENABLE_AI_FEATURES_COMMENT@enable_sentiment_analysis = true
@ENABLE_AI_FEATURES_COMMENT@enable_auto_classification = true
@ENABLE_AI_FEATURES_COMMENT@enable_smart_replies = true
@ENABLE_AI_FEATURES_COMMENT@enable_email_summarization = true
@ENABLE_AI_FEATURES_COMMENT@enable_intent_recognition = true
@ENABLE_AI_FEATURES_COMMENT@enable_language_detection = true
@ENABLE_AI_FEATURES_COMMENT@enable_translation = true

[Security]
# Zero-Trust Security Framework
@ENABLE_ZERO_TRUST_COMMENT@enable_zero_trust = @ENABLE_ZERO_TRUST@
@ENABLE_ZERO_TRUST_COMMENT@default_trust_level = "minimal"
@ENABLE_ZERO_TRUST_COMMENT@continuous_verification = true
@ENABLE_ZERO_TRUST_COMMENT@behavioral_analysis = true
@ENABLE_ZERO_TRUST_COMMENT@device_fingerprinting = true

# Authentication
@ENABLE_ZERO_TRUST_COMMENT@require_mfa = false
@ENABLE_ZERO_TRUST_COMMENT@mfa_methods = "totp,sms,email"
@ENABLE_ZERO_TRUST_COMMENT@session_timeout = 3600
@ENABLE_ZERO_TRUST_COMMENT@max_failed_attempts = 5
@ENABLE_ZERO_TRUST_COMMENT@lockout_duration = 900

# Threat Detection
@ENABLE_ZERO_TRUST_COMMENT@enable_threat_detection = true
@ENABLE_ZERO_TRUST_COMMENT@threat_detection_sensitivity = "medium"
@ENABLE_ZERO_TRUST_COMMENT@enable_deepfake_detection = true
@ENABLE_ZERO_TRUST_COMMENT@enable_ai_attack_detection = true
@ENABLE_ZERO_TRUST_COMMENT@enable_behavioral_anomaly_detection = true

# Quantum-Safe Cryptography
@ENABLE_QUANTUM_CRYPTO_COMMENT@enable_quantum_safe_crypto = @ENABLE_QUANTUM_CRYPTO@
@ENABLE_QUANTUM_CRYPTO_COMMENT@quantum_safe_algorithms = "kyber,dilithium,falcon"
@ENABLE_QUANTUM_CRYPTO_COMMENT@hybrid_crypto_mode = true
@ENABLE_QUANTUM_CRYPTO_COMMENT@migration_schedule = "gradual"

[Performance]
# General performance settings
max_connections = 1000
max_threads = 50
connection_timeout = 300
read_timeout = 120
write_timeout = 120

# Memory management
max_memory_usage = "2GB"
memory_cleanup_interval = 300
enable_memory_compression = true

# Caching
enable_caching = true
cache_size = "512MB"
cache_ttl = 3600
cache_type = "redis"
redis_host = "localhost"
redis_port = 6379

# Queue management
max_queue_size = 10000
queue_processing_threads = 10
delivery_retry_attempts = 5
delivery_retry_interval = 300

[Features]
# Sequential Thinking Architecture
enable_sequential_thinking = true
thinking_depth_levels = 7
consciousness_mode = false
meta_learning = true
self_optimization = true

# Context-Aware Processing
enable_context_awareness = true
context_memory_size = "1GB"
context_retention_days = 90
user_profile_learning = true

# Advanced Email Features
enable_predictive_responses = true
enable_auto_categorization = true
enable_priority_scoring = true
enable_action_extraction = true
enable_thread_summarization = true

# Real-time Processing
enable_real_time_processing = true
stream_processing_buffer_size = 1000
real_time_analysis_timeout = 5

[Monitoring]
# Health monitoring
enable_health_monitoring = true
health_check_interval = 60
metrics_collection = true
metrics_retention_days = 30

# Performance metrics
enable_performance_metrics = true
detailed_timing_metrics = false
cpu_usage_monitoring = true
memory_usage_monitoring = true
network_monitoring = true

# Alerting
enable_alerting = true
alert_smtp_server = "localhost"
alert_email = "admin@example.com"
alert_thresholds_cpu = 80
alert_thresholds_memory = 85
alert_thresholds_disk = 90

[Development]
# Development and debugging options
debug_mode = false
verbose_logging = false
enable_profiling = false
enable_memory_debugging = false
enable_api_documentation = true

# Testing features
enable_test_mode = false
test_data_retention = false
mock_external_services = false

[Integration]
# External service integrations
webhook_url = ""
webhook_events = "email_received,email_sent,threat_detected"
webhook_timeout = 30
webhook_retry_attempts = 3

# API configuration
enable_rest_api = true
api_port = 8080
api_ssl_port = 8443
api_authentication = "token"
api_rate_limiting = true
api_rate_limit = 1000

# Plugin system
enable_plugins = true
plugin_directory = "/var/lib/hmailserver/plugins"
plugin_auto_load = true